<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameEdit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EditLutemonFragment" >

    <Button
        android:id="@+id/btnChangeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:text="Vaihda" />

    <EditText
        android:id="@+id/editTxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Anna uusi nimi"
        android:inputType="textPersonName" />

    <RadioGroup
        android:id="@+id/rgRename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/rbZeroRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zero" />

        <RadioButton
            android:id="@+id/rbOneRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="One" />

        <RadioButton
            android:id="@+id/rbTwoRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Two" />

        <RadioButton
            android:id="@+id/rbThreeRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Three" />

        <RadioButton
            android:id="@+id/rbFourRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Four" />
    </RadioGroup>
</FrameLayout>